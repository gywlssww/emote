<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp" android:orientation="horizontal"
              android:paddingLeft="40dp" android:paddingRight="40dp">

    <ImageView
            android:id="@+id/list_emote_icon"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_gravity="center" android:src="@drawable/hmm_icon" android:padding="20dp"/>

    <TextView
            android:id="@+id/list_board_name"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"
            android:layout_gravity="center" android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp" android:text="기쁨 게시판"/>

</LinearLayout>
