<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
             android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statisticsTitle"
            android:text="5일간의 감정을 기록해보아요!"
            android:textSize="27sp"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="364dp"
            android:layout_height="85dp"
            android:id="@+id/linearLayout"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:layout_marginTop="24dp">
        <ImageView android:id="@+id/stat_emo1" android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginRight="5dp"/>
        <ImageView android:id="@+id/stat_emo2" android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginRight="5dp" android:layout_marginLeft="5dp"/>
        <ImageView android:id="@+id/stat_emo3" android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginRight="5dp" android:layout_marginLeft="5dp"/>
        <ImageView android:id="@+id/stat_emo4" android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginRight="5dp" android:layout_marginLeft="5dp"/>
        <ImageView android:id="@+id/stat_emo5" android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <ImageView android:layout_width="match_parent" android:layout_height="300dp" android:id="@+id/graphCanvas"/>

</LinearLayout>

