<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" tools:layout_editor_absoluteY="25dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="364dp"
            android:layout_height="85dp"
            android:id="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.428"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="24dp">
        <ImageView android:id="@+id/stat_emo1" android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginRight="5dp"/>
        <ImageView android:id="@+id/stat_emo2" android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginRight="5dp" android:layout_marginLeft="5dp"/>
        <ImageView android:id="@+id/stat_emo3" android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginRight="5dp" android:layout_marginLeft="5dp"/>
        <ImageView android:id="@+id/stat_emo4" android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginRight="5dp" android:layout_marginLeft="5dp"/>
        <ImageView android:id="@+id/stat_emo5" android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <ImageView
            android:layout_width="195dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/imageView" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>
