<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical"
        tools:context=".SigninActivity" android:background="@drawable/signin">
    <LinearLayout
            android:orientation="vertical" android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="3">
            <Button
                    android:text="" android:onClick="OnBtnClick"
                    android:layout_width="46dp" android:background="#00ff0000"
                    android:layout_height="36dp"
                    android:id="@+id/btn_back"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
                android:layout_height="0dp" android:layout_weight="2">
            <EditText
                    android:layout_width="236dp"
                    android:layout_height="47dp"
                    android:inputType="textPersonName" android:hint="id"
                    android:text=""
                    android:id="@+id/sign_id"/>
            <EditText
                    android:layout_width="236dp"
                    android:layout_height="47dp" android:hint="password"
                    android:inputType="textPassword" android:layout_marginBottom="25dp"
                    android:id="@+id/sign_pw"/>
            <RadioGroup
                    android:layout_width="236dp" android:orientation="horizontal"
                    android:layout_height="375dp" android:checkedButton="@+id/sign_woman">
                <RadioButton
                        android:text="여성"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_woman" android:layout_marginRight="20dp"/>
                <RadioButton
                        android:text="남성"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_man"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical" android:layout_weight="1" android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
        <Button
                android:text="가입하기" android:onClick="OnBtnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btn_join2"/>
    </LinearLayout>
</LinearLayout>