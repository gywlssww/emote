<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical"
        tools:context=".LoginActivity" android:background="@null">
    <LinearLayout
            android:orientation="horizontal" android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"
                android:src="@drawable/logo_eng"
                android:layout_gravity="bottom"
                android:layout_weight="2"/>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal" android:layout_weight="1"
            android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_height="0dp">
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">

        </LinearLayout>
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                <EditText
                        android:layout_width="236dp"
                        android:layout_height="40dp"
                        android:inputType="textPersonName"
                        android:text="" android:hint="  name"
                        android:background="#f0f0f0"
                        android:id="@+id/log_id"
                        android:layout_marginBottom="10dp"/>
                <EditText
                        android:layout_width="236dp"
                        android:layout_height="40dp" android:hint=" number"
                        android:inputType="textPassword"
                        android:background="#f0f0f0"
                        android:id="@+id/log_pw"/>
                <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content" >
                    <ImageButton
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:onClick="OnBtnClick"
                            android:scaleType="fitCenter"
                            android:id="@+id/btn_login"
                            android:background="@null"
                            android:src="@drawable/start_btn"
                    android:layout_marginRight="20dp"/>
                    <ImageButton
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="50dp"
                            android:onClick="OnBtnClick"
                            android:id="@+id/btn_join1"
                            android:scaleType="fitCenter"
                            android:background="@null"
                            android:src="@drawable/signup_btn"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"></LinearLayout>

    </LinearLayout>

</LinearLayout>